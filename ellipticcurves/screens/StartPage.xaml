<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
			 x:Class="EllipticCurves.StartPage">
	<ScrollView>
		    <StackLayout Padding="10, 10, 10, 10">
			    	<Button Text="Калькулятор GF(n)" x:Name="calculatorButton" Clicked="handler_calculatorButtonClick"
			    		Font="32"  VerticalOptions="StartAndExpand"/>
			    	<Button Text="Эллиптические кривые" x:Name="ellipticButton" Clicked="handler_ellipticButtonClick"
			    		Font="32" VerticalOptions="StartAndExpand"/>
			    	<Button Text="Криптография на ЭК" x:Name="cryptoButton" Clicked="handler_buttonCryptoClick"
			    		Font="32"  VerticalOptions="StartAndExpand"/>
			    	<Button Text="Справка" x:Name="infoButton" Clicked="handler_buttonInfoClick"
			    		Font="32"  VerticalOptions="StartAndExpand"/>
		    </StackLayout>
	</ScrollView>
</ContentPage>
